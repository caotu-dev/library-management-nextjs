{
  "extends": [
    "next",
    "next/core-web-vitals",
    "prettier",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["prettier", "@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [".commitlintrc.js", ".lintstagedrc.js"],
  "rules": {
    "prettier/prettier": [
      "off",
      {
        "endOfLine": "auto",
        "no-console": "warn",
        "singleQuote": false,
        "trailingComma": "all",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "tabWidth": 2
      }
    ],
    "semi": ["error", "always"],
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
